{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "types": ["node"],
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  